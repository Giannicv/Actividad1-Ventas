@page "/ventapage"
@inject NavigationManager navigationManager
@inject VentaService ventaService

<h3>Representante de venta</h3>

<button @onclick="nuevo" class="btn btn-secondary">Nuevo</button>

@if (lista != null && lista.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Num Empleado</th>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Cargo</th>
                <th>Fecha Contrato</th>
                <th>Cuota</th>
                <th>Ventas</th>
                <th>Jefe</th>
                <th>Sucursal</th>   
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in lista)
            {
                <tr>
                    <td>@item.num_Empl</td>
                    <td>@item.Nombre</td>
                    <td>@item.Edad</td>
                    <td>@item.Cargo</td>
                    <td>@item.FechaContrato?.ToString("dd/MM/yyyy")</td>
                    <td>@item.Cuota</td>
                    <td>@item.Ventas</td>
                    <td>@item.nombrejefe</td>
                    <td>@item.nombresucursal</td>
                    <td>
                        <button class="btn btn-primary btn-sm" @onclick="(() => recuperarEmpleado(item.num_Empl ?? 0))">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001" />
                            </svg>
                        </button>
                        <button class="btn btn-danger btn-sm" @onclick="(() => eliminarEmpleado(item.num_Empl ?? 0))">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay empleados registrados.</p>
}

@code {
    private void nuevo()
    {
        navigationManager.NavigateTo("/formventa");
    }

    public List<VentaListCLS> lista { get; set; } = new List<VentaListCLS>();

    protected override Task OnInitializedAsync()
    {
        // Datos de prueba
        lista = ventaService.listarVentas();
        return base.OnInitializedAsync();
    }

    private void recuperarEmpleado(int num_Empl)
    {
        navigationManager.NavigateTo("/formventa/edit/" + num_Empl);
    }

    private void eliminarEmpleado(int num_Empl)
    {
        ventaService.eliminarVenta(num_Empl);
        listarVentas();
    }
    private void listarVentas()
    {
        lista = ventaService.listarVentas();
    }
}
